  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    // Login trends from PHP
    const trendLabels = <?= $labels_json ?>;
    const trendData = <?= $data_json ?>;
    new Chart(document.getElementById('loginChart'), {
      type: 'line',
      data: {
        labels: trendLabels.map(date => {
          // Format as short day name, e.g., Mon, Tue
          const d = new Date(date);
          return d.toLocaleDateString('en-US', { weekday:'short' });
        }),
        datasets: [{
          label: 'Logins',
          data: trendData,
          borderColor: '#d32f2f',
          backgroundColor: 'rgba(211,47,47,0.10)',
          pointBackgroundColor: '#fff',
          pointBorderColor: '#d32f2f',
          pointRadius: 6,
          pointHoverRadius: 8,
          tension: 0.38,
          fill: true,
        }]
      },
      options: {
        plugins:{
          legend:{display:false},
          tooltip: {
            backgroundColor: '#fff',
            titleColor: '#d32f2f',
            bodyColor: '#d32f2f',
            borderColor: '#d32f2f',
            borderWidth: 1.3,
            cornerRadius: 6,
            padding: 12
          }
        },
        scales:{
          y: { beginAtZero: true, grid: { color: "#d32f2f22" }, ticks: { color: "#b71c1c", font: { weight: 600 }} },
          x: { grid: { color: "#d32f2f11" }, ticks: { color: "#b71c1c", font: { weight: 600 }} }
        }
      }
    });
    // Inactivity logout
    let timer; function reset() {clearTimeout(timer);timer=setTimeout(()=>{window.location='logout.php?timeout=1'},60000);}
    window.onload=reset;document.onmousemove=reset;document.onkeypress=reset;
  </script>
