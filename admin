<?php
// session_start(); if(!isset($_SESSION['user_id'])) header("Location: login.php");

// Database config - adjust credentials as needed
$db_host = 'localhost';
$db_user = 'root';
$db_pass = '';
$db_name = 'risk_management_system';

// Connect to the database
$mysqli = new mysqli($db_host, $db_user, $db_pass, $db_name);
if ($mysqli->connect_errno) {
    die("Failed to connect to MySQL: " . $mysqli->connect_error);
}

// Count Active Users
$result = $mysqli->query("SELECT COUNT(*) as count FROM users WHERE status='active'");
$active_users = ($row = $result->fetch_assoc()) ? $row['count'] : 0;

// Count Locked Accounts
$result = $mysqli->query("SELECT COUNT(*) as count FROM users WHERE status='locked'");
$locked_accounts = ($row = $result->fetch_assoc()) ? $row['count'] : 0;

// Count Pending Invites
$result = $mysqli->query("SELECT COUNT(*) as count FROM invites WHERE status='pending'");
$pending_invites = ($row = $result->fetch_assoc()) ? $row['count'] : 0;

// Count Recent Logins (last 24h)
$result = $mysqli->query("SELECT COUNT(*) as count FROM users WHERE last_login >= (NOW() - INTERVAL 1 DAY)");
$recent_logins = ($row = $result->fetch_assoc()) ? $row['count'] : 0;

// Login trends for past 7 days
$login_trends = [];
$result = $mysqli->query("
    SELECT DATE(last_login) as day, COUNT(*) as count 
    FROM users 
    WHERE last_login >= (CURDATE() - INTERVAL 6 DAY)
    GROUP BY day
    ORDER BY day ASC
");
$trend_labels = [];
$trend_data = [];
// Fill with 0 for missing days
for ($i = 6; $i >= 0; $i--) {
    $date = date('Y-m-d', strtotime("-$i days"));
    $trend_labels[$date] = 0;
}
while ($row = $result->fetch_assoc()) {
    $trend_labels[$row['day']] = (int)$row['count'];
}
$labels_json = json_encode(array_keys($trend_labels));
$data_json = json_encode(array_values($trend_labels));

// User info for navbar (replace with session user if available)
$user = ['name'=>'Admin'];

// Close DB
$mysqli->close();
